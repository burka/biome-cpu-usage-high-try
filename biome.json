{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "files": {
    "includes": ["**/*"],
    "maxSize": 1073741824,
    "experimentalScannerIgnores": ["playwright-report"]
  },
  "vcs": {
    "useIgnoreFile": false
  },
  "formatter": {
    "useEditorconfig": true,
    "formatWithErrors": true
  },
  "assist": {
    "actions": {
      "source": {
        "organizeImports": "on"
      }
    }
  },
  "html": {
    "formatter": {
      "enabled": true
    }
  }
}
