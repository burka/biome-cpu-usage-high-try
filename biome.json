{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "files": {
    "includes": [
      "**/*",
      "playwright_report/**",
      "**/*.html",
      "**/*.md",
      "**/*.xml"
    ],
    "maxSize": 1073741824
  },
  "vcs": {
    "useIgnoreFile": false
  },
  "formatter": {
    "useEditorconfig": true,
    "formatWithErrors": true
  },
  "assist": {
    "actions": {
      "source": {
        "organizeImports": "on"
      }
    }
  },
  "html": {
    "formatter": {
      "enabled": true
    }
  }
}
